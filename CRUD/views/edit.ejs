<!DOCTYPE html>
<html>
<head>
    <title></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <% users.forEach(function(user){  %>  
        <form method="post" action="/update/<%= user.user_id %>" autocomplete="off">
            <div class="from-group">
                <label><b>User Name</b></label>
                <input type="text" name="name" class="form-control" value="<%= user.user_name %>">
            </div>
            <div class="from-group">
                <label><b>User Email</b></label>
                <input type="email" name="email" class="form-control" value="<%= user.user_email %>">
            </div>
            <div class="from-group">
                <label><b>User Password</b></label>
                <input type="password" name="password" class="form-control" value="<%= user.user_password %>">
            </div>
            <input type="submit" name="update" value="update" class="btn btn-success">
        </form>
        <% }) %>
    </div>
</body>
</html>